<% layout('layout') -%>
<h2>Categories</h2>
<form method="post" action="/admin/categories/new" class="card">
  <label>Name</label><input name="name" required>
  <button class="btn">Add</button>
</form>
<table><tr><th>Name</th><th>Action</th></tr>
<% categories.forEach(c=>{ %>
<tr>
  <td><%= c.name %></td>
  <td>
    <form method="post" action="/admin/categories/<%= c.id %>/delete" onsubmit="return confirm('Delete?')">
      <button class="btn">Delete</button>
    </form>
  </td>
</tr>
<% }) %>
</table>