<% layout('layout') -%>
<h2>Products</h2>
<form method="post" action="/admin/products/new" class="card">
  <h3>New product</h3>
  <label>Name</label><input name="name" required>
  <label>Description</label><textarea name="description" required></textarea>
  <label>Price (kobo)</label><input name="price_cents" type="number" required>
  <label>Category</label>
  <select name="category_id">
    <% categories.forEach(c=> { %><option value="<%= c.id %>"><%= c.name %></option><% }) %>
  </select>
  <label>Image URL (optional)</label><input name="image_url">
  <label>Active <input type="checkbox" name="active" checked></label>
  <button class="btn">Create</button>
</form>
<table><tr><th>Name</th><th>Category</th><th>Price</th><th>Actions</th></tr>
<% products.forEach(p=>{ %>
<tr>
  <td><%= p.name %></td>
  <td><%= p.category_name %></td>
  <td>â‚¦<%= (p.price_cents/100).toFixed(2) %></td>
  <td>
    <form method="post" action="/admin/products/<%= p.id %>/delete" onsubmit="return confirm('Delete?')">
      <button class="btn">Delete</button>
    </form>
  </td>
</tr>
<% }) %>
</table>