<% layout('layout') -%>
<h2>Your Cart</h2>
<% if (items.length===0){ %><p>No items yet.</p><% } else { %>
<table><tr><th>Product</th><th>Qty</th><th>Line Total</th></tr>
<% items.forEach(i=>{ %>
<tr><td><%= i.product.name %></td><td><%= i.quantity %></td><td>₦<%= (i.lineTotal/100).toFixed(2) %></td></tr>
<% }) %>
<tr><th colspan="2">Total</th><th>₦<%= (total/100).toFixed(2) %></th></tr>
</table>
<form method="post" action="/checkout"><button class="btn">Checkout with Paystack</button></form>
<% } %>