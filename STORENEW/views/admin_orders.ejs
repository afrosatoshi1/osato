<% layout('layout') -%>
<h2>Orders</h2>
<table>
<tr><th>ID</th><th>User</th><th>Status</th><th>Total</th><th>Created</th><th>Update</th></tr>
<% orders.forEach(o=>{ %>
<tr>
  <td>#<%= o.id %></td>
  <td><%= o.user_email %></td>
  <td><%= o.status %></td>
  <td>â‚¦<%= (o.total_cents/100).toFixed(2) %></td>
  <td><%= o.created_at %></td>
  <td>
    <form method="post" action="/admin/orders/<%= o.id %>/status">
      <select name="status">
        <option<%= o.status==='PENDING'?' selected':'' %>>PENDING</option>
        <option<%= o.status==='PAID'?' selected':'' %>>PAID</option>
        <option<%= o.status==='SHIPPED'?' selected':'' %>>SHIPPED</option>
        <option<%= o.status==='CANCELLED'?' selected':'' %>>CANCELLED</option>
      </select>
      <button class="btn">Save</button>
    </form>
  </td>
</tr>
<% }) %>
</table>